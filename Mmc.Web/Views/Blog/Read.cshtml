@model Mechi.Backend.ViewModel.Blog.ArticleReadViewModel;
<article>
    <!-- Post header-->
    <header class="mb-4">
        <!-- Post title-->
        <h1 class="fw-bolder mb-1">@Model.Title</h1>
        <!-- Post meta content-->
        <div class="text-muted fst-italic mb-2">@Model.Date by @Model.AuthorName</div>
        <!-- Post categories-->
            @foreach (var item in Model.Categories)
            {
                <a class="badge bg-secondary text-decoration-none link-light" href="#">item</a>
            }
    </header>
    <!-- Preview image figure-->
    <figure class="mb-4"><img class="img-fluid rounded" src="~/Assets/Home/Images/mechi5.jpg" alt="..." /></figure>
    <!-- Post content-->
    <section class="mb-5 fs-5">
        @Html.Raw(Model.Body)
    </section>
</article>
<!-- Comments section-->
<section class="mb-5">
    <div class="card bg-light">
        <div class="card-body">
            <!-- Comment form-->
            <form class="mb-4"><textarea class="form-control" rows="3" placeholder="Join the discussion and leave a comment!"></textarea></form>
            <div class="comment-section-container">
                
            </div>
            
        </div>
    </div>
</section>

<script type="text/javascript">
    $.ajax({
      url: "@Url.Action("GetComments","BlogApi")",
      context: document.body
    }).done(function() {
      $( this ).addClass( "done" );
    });
</script>>
