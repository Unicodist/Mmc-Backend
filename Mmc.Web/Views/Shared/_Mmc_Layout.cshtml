@using Mmc.Blog.Repository
@inject ICategoryRepository _categoryRepo;
@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="Blog website for Mechi Multiple campus" />
        <meta name="author" content="Ashish And Pramisa" />
        <title>Mmc - @ViewData["Title"]</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <script src="lib/jquery/dist/jquery.min.js" ></script>
        <link rel="stylesheet" href="datatables/css/jquery.dataTables.css">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Responsive navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                @Html.ActionLink("Mmc Blog","Index","Home",null,new{@class="navbar-brand"})
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new {@class = "nav-link"})</li>
                        <li class="nav-item">@Html.ActionLink("Notices", "Index", "Notice", null, new {@class = "nav-link"})</li>
                        <li class="nav-item">@Html.ActionLink("Login", "Index", "Login", null, new {@class = "nav-link"})</li>
                        <li class="nav-item">@Html.ActionLink("Sign Up", "Register", "Login", null, new {@class = "nav-link"})</li>
                    </ul>
                </div>
            </div>
        </nav>

        @RenderBody()

<!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Ashish&Pramisa</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <!-- Core theme JS-->
        <script src="~/js/mmc-temp-scripts.js"></script>
        <script src="datatables/js/jquery.dataTables.min.js"></script>
    </body>
</html>
