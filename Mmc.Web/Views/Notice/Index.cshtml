@{
    Layout = "_Mmc_Layout";
}
<table id="noticeDT">
    <thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Date</th>
        <th>User</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
    $(document).ready(function() {
        $("#noticeDT").DataTable({
            ajax:{
                url: '@Url.Action("Read","Notice")'
            },
            columns:
            [
                {data:'title'},
                {data:'body'},            
                {data:'date'},            
                {data:'user'},
                {
                    'data':'guid',render:function(data,type,row,meta){
                        return "<button class='btn btn-primary' onclick='editNotice("+JSON.stringify(row)+")'>Edit</button>"
                    }
                }
            ]
        });
    });
</script>